@model ReceitaViewModel
@{
    ViewData["Title"] = "Cadastrar";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <h3>Detalhes da Receita</h3>
            @using (Html.BeginForm("Create", "Receita", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(p => p.Titulo)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-heading"></i></span>
                            @Html.TextBoxFor(p => p.Titulo, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Descricao)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-highlighter"></i></span>
                            @Html.TextAreaFor(p => p.Descricao, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Ingredientes)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-egg"></i></span>
                            @Html.TextAreaFor(p => p.Ingredientes, new { @class = "form-control", rows = "10" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.ModoDePreparo)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-list-alt"></i></span>
                            @Html.TextAreaFor(p => p.ModoDePreparo, new { @class = "form-control", rows = "10" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Tag)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-bars"></i></span>
                            @Html.TextBoxFor(p => p.Tag, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.FotoUpload)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-camera"></i></span>
                            </div>
                            <div class="custom-file">
                                <input asp-for="FotoUpload" type="file" class="custom-file-input" aria-describedby="inputText" />
                                <label class="custom-file-label" for="inputText">Selecione a foto da receita</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.IdCategoria)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                            <select asp-for="IdCategoria" asp-items="ViewBag.Categorias" class="form-control"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.IdUsuario)
                    <div class="input-group mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                            <select asp-for="IdUsuario" asp-items="ViewBag.Usuarios" class="form-control"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            }
        </div>
        <div class="col-6">
            <h3>Imagem Atual</h3>
            @if (Model?.Foto != null)
            {
                <img src="data:image/png;base64,@Model.Foto" class="img-fluid" />
            }
            else 
            {
                <p>Nenhuma imagem cadastrada</p>
            }
        </div>
    </div>
</div>


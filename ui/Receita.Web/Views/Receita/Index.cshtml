@model IEnumerable<ReceitaViewModel>

@{
    ViewData["Title"] = "Receitas Maravilhosas";
}

<div class="container">
    @foreach (var receita in Model)
    {
        <div class="col-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">@receita.Tag</strong>
                    <h3 class="mb-0">@receita.Titulo</h3>
                    <p class="card-text mb-auto">@receita.Descricao</p>
                    <a href="Details/?id=@receita.Id" class="stretched-link">Ler</a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img src="data:image/png;base64,@receita.Foto" class="bd-placeholder-img" width="200" height="250" />
                </div>
            </div>            
        </div>
    }
</div>

